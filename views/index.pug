<!DOCTYPE html>
html(lang="en")
head
  meta(charset="UTF-8")
  title #{title}
  
  link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
  link(rel="stylesheet", href="/bower_components/sweetalert/dist/sweetalert.css")
  link(rel="stylesheet", href="/css/style.css")
  
  script(src="/bower_components/angular/angular.js", charset="utf-8")
  script(src="/bower_components/satellizer/satellizer.js", charset="utf-8")
  script(src="/bower_components/angular-animate/angular-animate.js", charset="utf-8")
  script(src="/bower_components/angular-touch/angular-touch.js", charset="utf-8")
  script(src="/bower_components/angular-bootstrap/ui-bootstrap-tpls.js", charset="utf-8")
  script(src="/bower_components/angular-ui-router/release/angular-ui-router.js", charset="utf-8")
  script(src="/bower_components/sweetalert/dist/sweetalert.min.js", charset="utf-8")
  script(src="/bower_components/ngSweetAlert/SweetAlert.min.js", charset="utf-8")
  
  script(src="/js/bundle.js")
  
body(ng-app='myApp' ng-controller='MainController as main')
  .titleContainer
    h1.title #{title} 
  .container-fluid.appArea
    .buttonArea
      //- button.btn.btn-default(ui-sref='home') Home
      button.btn.btn-lg.btn-default(ui-sref='search' ng-if='main.isAuthenticated()') Search
      button.btn.btn-lg.btn-default(ui-sref='favorites' ng-if='main.isAuthenticated()') Favorites
      button.btn.btn-lg.btn-default(ng-click='main.logout()' ng-if='main.isAuthenticated()') Logout
      button.btn.btn-lg.btn-default(ui-sref='register' ng-if='!main.isAuthenticated()') Register
      button.btn.btn-lg.btn-default(ui-sref='login' ng-if='!main.isAuthenticated()') Login
      span(ng-if='main.isAuthenticated()') Hello, {{main.username}}
      hr
    ui-view
  .footer.container-fluid  
    p Elliot Himmelfarb
